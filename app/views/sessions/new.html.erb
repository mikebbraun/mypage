
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <div class="login">
          <h1>Log In</h1>
          <%= form_tag sessions_path do %>
          <p>
            <%= label_tag :username %>
            <%= text_field_tag :username %>
          </p>
          <p>
            <%= label_tag :password %>
            <%= password_field_tag :password %>
          </p>
          <p>
            <%= submit_tag 'Log in' %>
          </p>
          <% end  %>

          <%= link_to 'New User', new_user_path %>

        </div>

      </div>
    </div>
  </div>
